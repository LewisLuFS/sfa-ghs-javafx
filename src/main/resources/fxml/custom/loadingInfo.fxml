<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root type="HBox" spacing="0" styleClass="vBox" alignment="CENTER" xmlns:fx="http://javafx.com/fxml">
	<padding>
		<Insets left="2" right="2" top="2" bottom="2" />
	</padding>

	<Label text="FWD" />

	<VBox spacing="10">
		<padding>
			<Insets left="2" right="2" top="0" bottom="0" />
		</padding>

		<!-- 主舱 -->
		<HBox fx:id="mainSpace" spacing="0" />

		<HBox>
			<!-- 前腹舱 -->
			<HBox fx:id="fwdSpace" spacing="0" />
			<Pane HBox.hgrow="ALWAYS" />
			<!-- 后腹舱 -->
			<HBox fx:id="aftSpace" spacing="0" />
		</HBox>
	</VBox>

	<Label text="AFT" />
</fx:root>
